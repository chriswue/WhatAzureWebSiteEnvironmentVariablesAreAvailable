<body>
    <main>
        <h1>What Azure Web Site/App Environment Variables Are Available?</h1>
        <p>This is a completely <em>out of the box</em>, <em>default</em> web site/app. Here are its <a href="#environment-variables">environment variables</a>, <a href="#app-settings">app settings</a>, and <a href="#connection-strings">connection strings</a>.</p>
        <h2 id="environment-variables">Environment Variables</h2>
        <table>
            <tr>
                <th>Variable</th>
                <th>Value</th>
            </tr>
            @foreach (var pair in Model.EnvironmentVariables)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td>@pair.Value</td>
                </tr>
            }
        </table>

        <h2 id="app-settings">Request Headers</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
            @foreach (var pair in Model.Headers)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td>@pair.Value</td>
                </tr>
            }
        </table>

        <h2 id="app-settings">Request Cookies</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th>Domain</th>
                <th>Path</th>
                <th>Expires</th>
                <th>HTTP Only</th>
                <th>Secure</th>
            </tr>

            @foreach (var pair in Model.Cookies)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td>@pair.Value.Value</td>
                    <td>@pair.Value.Domain</td>
                    <td>@pair.Value.Path</td>
                    <td>@pair.Value.Expires</td>
                    <td>@pair.Value.HttpOnly</td>
                    <td>@pair.Value.Secure</td>
                </tr>
            }
        </table>

        <h2 id="app-settings">App Settings</h2>
        <table>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>

            @foreach (var pair in Model.AppSettings)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td>@pair.Value</td>
                </tr>
            }
        </table>

        <h2 id="connection-strings">Connection Strings</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Connection String</th>
                <th>Provider Name</th>
            </tr>

            @foreach (var pair in Model.ConnectionStrings)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td>@pair.Value.ConnectionString</td>
                    <td>@pair.Value.ProviderName</td>
                </tr>
            }
        </table>
    </main>
